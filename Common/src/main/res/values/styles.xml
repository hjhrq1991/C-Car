<resources>

    <!-- Base application theme. -->
    <!--Theme.AppCompat.Light.NoActionBar-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#4CAF50</item>
        <item name="colorPrimaryDark">#388E3C</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorAccent">#448AFF</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--影响了toolbar 的menu 颜色 -->
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:divider">@color/list_view_divider</item>
        <item name="ripple_color">@android:color/darker_gray</item>
        <!--改变ActionButton 的按下颜色 -->
        <item name="selectableItemBackground">@drawable/selectable_item_background</item>

    </style>

    <style name="NoTitle" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Hroizontal_Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>


    <style name="Vertical_Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
</resources>
